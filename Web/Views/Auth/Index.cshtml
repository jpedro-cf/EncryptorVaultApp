@using MyMVCProject.Web.Models.Auth
@model MyMVCProject.Web.Models.Auth.AuthViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}
<div id="auth-page" class="d-flex justify-content-center align-items-center">
    <div class="card bg-neutral-100 p-4 border-0 d-block">
        <div class="d-flex align-items-center gap-3 mb-3">
            <div class="bg-purple rounded-3 text-neutral-100 p-2 d-inline-block">
                <i data-lucide="file-lock-2" width="28" height="28"></i>
            </div>
            <h2 class="fw-semibold m-0">Welcome!</h2>
        </div>
        <ul class="nav nav-pills mb-3 gap-1 bg-purple-100 rounded-2 p-1 d-inline-flex" id="pills-tab" role="tablist">
            <li class="nav-item flex-grow-1" role="presentation">
                <button class="nav-link w-100 @(Model.ActiveTab == AuthViewModel.Tab.Register ? "active" : "")"
                        id="pills-signup-tab" data-bs-toggle="pill"
                        data-bs-target="#pills-signup" type="button"
                        role="tab" aria-controls="pills-signup"
                        aria-selected="@(Model.ActiveTab == AuthViewModel.Tab.Register ? "true" : "false")">
                    Sign Up
                </button>
            </li>
            <li class="nav-item flex-grow-1" role="presentation">
                <button class="nav-link w-100 @(Model.ActiveTab == AuthViewModel.Tab.Login ? "active" : "")"
                        id="pills-signin-tab" data-bs-toggle="pill"
                        data-bs-target="#pills-signin" type="button"
                        role="tab" aria-controls="pills-signin"
                        aria-selected="@(Model.ActiveTab == AuthViewModel.Tab.Login ? "true" : "false")">
                    Sign In
                </button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade @(Model.ActiveTab == AuthViewModel.Tab.Register ? "show active" : "")" id="pills-signup" role="tabpanel" aria-labelledby="pills-signup-tab" tabindex="0">
                @await Html.PartialAsync("_RegisterForm", Model.RegisterModel)
            </div>
            <div class="tab-pane fade @(Model.ActiveTab == AuthViewModel.Tab.Login ? "show active" : "")" id="pills-signin" role="tabpanel" aria-labelledby="pills-signin-tab" tabindex="0">
                @await Html.PartialAsync("_LoginForm", Model.LoginModel)
            </div>
        </div>
    </div>
</div>